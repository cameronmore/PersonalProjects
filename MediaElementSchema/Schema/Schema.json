{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://MediaElementSchema.com/Schema.json",
    "title": "Media Element Schema",
    "description": "A JSON Schema specifying bibliographic information for various media elements.",
    "type": "object",
    "properties": {
        "title": {
            "description": "The title of the media element",
            "type": "string"
        },
        "mediaType": {
            "description": "The meduim of the media. Ex: book, article, webpage with author, etc.",
            "type": "string"
        },
        "author": {
            "description": "The creator of the media, including director of a film. Note, this field must be a person, not an organization",
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                }
            }
        },
        "author2": {
